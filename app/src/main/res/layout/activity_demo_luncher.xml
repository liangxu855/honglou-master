<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/icon_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/tab_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search_remind_left_icon"/>

        <ImageView
            android:id="@+id/settingicon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:src="@drawable/settingimage"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/icon_btns"
        android:layout_marginTop="10dip"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/actorfrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdb_useactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="use activity"/>

            <RadioButton
                android:id="@+id/rdb_usefragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="static fragment"
                />

            <RadioButton
                android:id="@+id/rdb_usefragment_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="dynamic frament"
                />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/functions1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <Button
                android:id="@+id/alltabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AllTabs"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/mutitab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MutiTabs"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/singletab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OneTab"
                android:textAllCaps="false"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
