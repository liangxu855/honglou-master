<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.uibase.ui.ripple.RippleView
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/common_list_clip_color"
        app:mrl_rippleInAdapter="false"
        app:mrl_rippleOverlay="true">

        <TextView
            android:visibility="gone"
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="first_name"
            android:textColor="@color/common_list_title_color"
            android:textSize="16dp"/>
    </com.uibase.ui.ripple.RippleView>

    <View
        android:visibility="gone"
        android:id="@+id/first_divider_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#15000000"
        />

    <com.uibase.ui.ripple.RippleView
        android:id="@+id/second_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/common_list_clip_color"
        app:mrl_rippleInAdapter="false"
        app:mrl_rippleOverlay="true">

        <TextView
            android:visibility="gone"
            android:id="@+id/second_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="second_layout"
            android:textColor="@color/common_list_title_color"
            android:textSize="16dp"/>

    </com.uibase.ui.ripple.RippleView>

    <View
        android:visibility="gone"
        android:id="@+id/second_divider_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#15000000"
        />

    <com.uibase.ui.ripple.RippleView
        android:id="@+id/third_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/common_list_clip_color"
        app:mrl_rippleInAdapter="false"
        app:mrl_rippleOverlay="true">

        <TextView
            android:visibility="gone"
            android:id="@+id/third_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="third_name"
            android:textColor="@color/common_list_title_color"
            android:textSize="16dp"/>

    </com.uibase.ui.ripple.RippleView>

    <View
        android:visibility="gone"
        android:id="@+id/third_divider_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#15000000"
        />

    <com.uibase.ui.ripple.RippleView
        android:id="@+id/fourth_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/common_list_clip_color"
        app:mrl_rippleInAdapter="false"
        app:mrl_rippleOverlay="true">

        <TextView
            android:visibility="gone"
            android:id="@+id/fourth_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="fourth_name"
            android:textColor="@color/common_list_title_color"
            android:textSize="16dp"/>

    </com.uibase.ui.ripple.RippleView>

    <View
        android:visibility="gone"
        android:id="@+id/fourth_divider_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#15000000"
        />

    <com.uibase.ui.ripple.RippleView
        android:id="@+id/custom_dialog_cancel_view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/common_list_bg_color"
        app:mrl_rippleColor="@color/common_list_clip_color"
        app:mrl_rippleInAdapter="false"
        app:mrl_rippleOverlay="true">

        <TextView
            android:id="@+id/custom_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/common_list_title_color"
            android:textSize="16dp"/>
    </com.uibase.ui.ripple.RippleView>
</LinearLayout>
